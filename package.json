{
    "name": "@opuscapita/service-base-ui",
    "version": "1.1.164",
    "description": "Basic API for UI services of OpusCapita Business Network.",
    "main": "lib/bundle.js",
    "files": [
        "api",
        "lib",
        "components",
        "containers",
        "system"
    ],
    "author": "Christian Drengenberg <christian.drengenberg@opuscapita.com>",
    "license": "MIT",
    "scripts": {
        "start": "npm run dev",
        "dev": "npm run setup-consul ; node dev/index.js",
        "build": "rm -f ./lib/* ; npx webpack -p --config webpack.prod.config.js --env=production --colors --bail",
        "setup-consul": "curl -X PUT -d ${MYSQL_DATABASE} http://consul:8500/v1/kv/service-base-ui/db-init/database ; curl -X PUT -d root http://consul:8500/v1/kv/service-base-ui/db-init/user ; curl -X PUT -d ${MYSQL_ROOT_PASSWORD} http://consul:8500/v1/kv/service-base-ui/db-init/password ; curl -X PUT -d true http://consul:8500/v1/kv/service-base-ui/db-init/populate-test-data",
        "prepublishOnly": "npm run build && npm version patch -m 'Version set to %s. [skip ci]'"
    },
    "dependencies": {
        "prop-types": "^15.6.2",
        "react": "^15.4.0",
        "react-dom": "^15.6.2",
        "react-router": "^3.2.1"
    },
    "devDependencies": {
        "@opuscapita/config": "^3.0.27",
        "@opuscapita/db-init": "^2.0.30",
        "@opuscapita/i18n": "1.2.1",
        "@opuscapita/react-buttons": "^4.0.2",
        "@opuscapita/react-svg": "^4.0.0",
        "@opuscapita/svg-icons": "^1.1.5",
        "@opuscapita/web-init": "^3.0.100",
        "babel-core": "^6.26.3",
        "babel-loader": "^7.1.5",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.6.0",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "bluebird": "^3.5.3",
        "bluebird-retry": "^0.11.0",
        "clean-css": "^4.2.1",
        "css-loader": "^0.28.7",
        "deep-equal": "^1.0.1",
        "extend": "^3.0.2",
        "file-loader": "^1.1.5",
        "history": "^3.3.0",
        "jquery": "^3.2.1",
        "json-loader": "^0.5.7",
        "less": "^3.9.0",
        "less-loader": "^4.1.0",
        "node-minify": "^2.4.2",
        "postcss-loader": "^2.1.6",
        "raw-loader": "^0.5.1",
        "react-notification-system": "^0.2.17",
        "scriptjs": "^2.5.9",
        "style-loader": "^0.19.0",
        "superagent": "^3.8.3",
        "url-loader": "^0.6.2",
        "webpack": "^3.7.1",
        "webpack-cli": "^3.1.2",
        "webpack-visualizer-plugin": "^0.1.11"
    }
}
