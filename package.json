{
  "name": "ocbesbn-user",
  "version": "1.0.0",
  "description": "User service",
  "author": "Christian Drengenberg <Christian.Drengenberg@opuscapita.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpusCapitaBusinessNetwork/service-template"
  },
  "bugs": {
    "url": "https://github.com/OpusCapitaBusinessNetwork/service-template/issues"
  },
  "homepage": "https://github.com/OpusCapitaBusinessNetwork/service-template",
  "nyc": {
    "exclude": []
  },
  "dependencies": {
    "ocbesbn-config": "^2.2.5",
    "ocbesbn-db-init": "^1.1.5",
    "ocbesbn-web-init": "^1.0.3",
    "bluebird": "^3.0.5",
    "epilogue": "^0.7.0",
    "sequelize": "^3.24.7"
  },
  "devDependencies": {
    "jsdoc-to-markdown": "^3.0.0",
    "mocha": "^3.2.0",
    "mocha-junit-reporter": "^1.12.1",
    "nodemon": "^1.11.0",
    "nyc": "^10.1.2",
    "ocbesbn-service-client": "^0.1.10",
    "raml-to-markdown": "^1.x",
    "rimraf": "^2.6.0",
    "sequelize-to-markdown": "^1.x"
  },
  "scripts": {
    "start": "node src/server/index.js",
    "dev": "npm run setup-consul ; ${NODE_PATH}/.bin/nodemon --watch src/server src/server/index.js",
    "test": "npm run clean ; npm run setup-consul ; ${NODE_PATH}/.bin/nyc ${NODE_PATH}/.bin/mocha --timeout 30000 --recursive -R mocha-junit-reporter",
    "test-raw": "npm run clean ; npm run setup-consul ; ${NODE_PATH}/.bin/nyc ${NODE_PATH}/.bin/mocha --timeout 30000 --recursive",
    "clean": "${NODE_PATH}/.bin/rimraf .nyc_output coverage test-results.xml",
    "setup-consul": "curl -X PUT -d 'bnp' http://${HOST_IP}:8500/v1/kv/user/db-init/database ; curl -X PUT -d 'root' http://${HOST_IP}:8500/v1/kv/user/db-init/user ; curl -X PUT -d 'notSecurePa55w0rd' http://${HOST_IP}:8500/v1/kv/user/db-init/password; curl -X PUT -d 'true' http://${HOST_IP}:8500/v1/kv/user/db-init/populate-test-data ",
    "rest-doc": "mkdir -p wiki/rest-doc ; ${NODE_PATH}/.bin/raml2md -o file-per-resource -p wiki/rest-doc --output-ext=.endpoint.md rest-doc/main.raml",
    "domain-doc": "mkdir -p wiki/domain-doc ; ${NODE_PATH}/.bin/sq2md -o file-per-src -p wiki/domain-doc --init=init --field-bl=createdAt,updatedAt --output-ext=.model.md src/server/db/models",
    "doc": "npm run rest-doc ; npm run domain-doc"
  }
}
