{
    "name": "@opuscapita/service-base-ui",
    "version": "1.0.80",
    "description": "Basic API for UI services of OpusCapita Business Network.",
    "main": "lib/bundle.js",
    "files": [
        "lib",
        "components",
        "containers",
        "system"
    ],
    "author": "Christian Drengenberg <christian.drengenberg@opuscapita.com>",
    "license": "MIT",
    "scripts": {
        "start": "npm run dev",
        "dev": "npm run setup-consul ; node dev/index.js",
        "build": "npx webpack -p --config webpack.prod.config.js --env=production --colors --bail",
        "setup-consul": "curl -X PUT -d ${MYSQL_DATABASE} http://consul:8500/v1/kv/service-base-ui/db-init/database ; curl -X PUT -d root http://consul:8500/v1/kv/service-base-ui/db-init/user ; curl -X PUT -d ${MYSQL_ROOT_PASSWORD} http://consul:8500/v1/kv/service-base-ui/db-init/password ; curl -X PUT -d true http://consul:8500/v1/kv/service-base-ui/db-init/populate-test-data",
        "prepublishOnly": "npm version patch -m 'Version set to %s. [skip ci]'"
    },
    "dependencies": {
        "@opuscapita/i18n": "^1.1.0",
        "@opuscapita/react-navigation": "^0.0.36",
        "deep-equal": "^1.0.1",
        "extend": "^3.0.1",
        "history": "^3.3.0",
        "node-minify": "^2.4.1",
        "prop-types": "^15.6.0",
        "react": "^15.4.0",
        "react-dom": "^15.4.2",
        "react-notification-system": "^0.2.15",
        "react-router": "^3.2.0",
        "superagent": "^3.6.3"
    },
    "devDependencies": {
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.2",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.6.0",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "bluebird": "^3.5.1",
        "bluebird-retry": "^0.11.0",
        "clean-css": "^4.1.9",
        "css-loader": "^0.28.7",
        "file-loader": "^1.1.5",
        "jquery": "^3.2.1",
        "json-loader": "^0.5.7",
        "ocbesbn-db-init": "^1.1.11",
        "ocbesbn-web-init": "^2.2.22",
        "raw-loader": "^0.5.1",
        "style-loader": "^0.19.0",
        "url-loader": "^0.6.2",
        "webpack": "^3.7.1",
        "webpack-visualizer-plugin": "^0.1.11"
    }
}
