{
    "userInfo": {
        "translations": {
            "name": {
                "en": "Access user profile and onboard data",
                "de": "Zugriff auf eigene Benutzerdaten"
            },
            "description": {
                "en": "Allows to view user profile and onboard data",
                "de": "Erlaubt Zugriff auf eigenene Benutzerdaten wie Profil und Kampagnen-Info"
            }
        },
        "resources": [{
                "type": "rest",
                "resourceId": "(/api)?/onboardData/${_current_user_id}$",
                "actions": ["view"]
            },
            {
                "type": "rest",
                "resourceId": "(/api)?/users/${_current_user_id}/profile",
                "actions": ["view", "edit"]
            },
            {
                "type": "rest",
                "resourceId": "(/api)?/users/current/profile",
                "actions": ["view", "edit"]
            }
        ]
    },
    "x-tenant-user-mgmt": {
        "translations": {
            "name": {
                "en": "User management for x-tenant",
                "de": "Benutzerverwaltung für x-tenant"
            },
            "description": {
                "en": "Includes new user, updating userdata and also the onboard data, high privilege completely for the x-tenant",
                "de": "Enthält neuen Benutzer, Aktualisierung von userdata und auch die Onboard-Daten, hohe Privileg komplett für den x-tenant"
            }
        },
        "resources": [{
                "type": "rest",
                "resourceId": "(/api)?/users/[%w | %p]*",
                "actions": ["view", "edit"]
            },
            {
                "type": "rest",
                "resourceId": "(/api)?/users",
                "actions": ["create", "view"]
            },
            {
                "type": "rest",
                "resourceId": "(/api)?/roles",
                "actions": ["view", "create"]
            },
            {
                "type": "rest",
                "resourceId": "(/api)?/roles/[%w | %p]*",
                "actions": ["view"]
            },
            {
                "type": "rest",
                "resourceId": "(/api)?/onboardingdata",
                "actions": ["view", "create"]
            },
            {
                "type": "rest",
                "resourceId": "(/api)?/onboardingdata/[%w | %p]*",
                "actions": ["view", "edit"]
            }
        ]
    }
}
