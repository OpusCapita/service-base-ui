{
  "x-tenant-user-mgmt": {
    "translations": {
      "name" : {
        "en": "User management for x-tenant",
        "de": "Benutzerverwaltung für x-tenant"
      },
      "description": {
        "en": "Includes new user, updating userdata and also the onboard data, high privilege completely for the x-tenant",
        "de": "Enthält neuen Benutzer, Aktualisierung von userdata und auch die Onboard-Daten, hohe Privileg komplett für den x-tenant"
      }
    },
    "resources": [
      {
        "type": "rest",
        "resourceId": "/users/[%w | %p]*",
        "actions": ["view", "edit"]
      },
      {
        "type": "rest",
        "resourceId": "/roles/[%w | %p]*",
        "actions": ["view", "edit", "create"]
      },
      {
        "type": "rest",
        "resourceId": "/roles/",
        "actions": ["create"]
      },
      {
        "type": "rest",
        "resourceId": "/users",
        "actions": ["create"]
      },
      {
        "type": "rest",
        "resourceId": "/onboardingdata",
        "actions": ["view", "create"]
      },
      {
        "type": "rest",
        "resourceId": "/onboardingdata/[%w | %p]*",
        "actions": ["edit"]
      }
    ]
  }
}
